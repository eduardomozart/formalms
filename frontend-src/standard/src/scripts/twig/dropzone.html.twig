<div id="drop-zone" class="forma-drop-zone">
  <div class="fd-middle-wrapper">
    <span>Browse or drop here the files</span>
  </div>
  <input type="file" multiple style="display:none;" id="fd-file-input">
</div>
{% if files.length %}
  <div id="drop-zone-list">
    <div>
        <div class="fd-list">
          <div class="columns">
              <div class="fd-list-column fd-list-files-column">
                {% for file in files %}
                  <div class="fd-list-file">
                      <div class="file-detail" data-index="{{ loop.index - 1 }}">
                        <div class="name">{{ file.title }}</div>
                        <div class="size">{{ file.formatted_size }}</div>
                      </div>
                      <div class="action-delete">
                        <div class="button">X</div>
                      </div>
                  </div>
                {% endfor %}
              </div>
              <div class="fd-list-column fd-edit-column">
                <div>
                    <div class="form-group title-input-wrapper"><label>Title</label><input type="text" class="title"></div>
                    <div class="form-group description-input-wrapper"><label>Description</label><textarea class="description"></textarea></div>
                </div>
              </div>
          </div>
          <div class="form-group"><button type="submit">{{ submitText }}</button></div>
        </div>
    </div>
  </div>
{% endif %}