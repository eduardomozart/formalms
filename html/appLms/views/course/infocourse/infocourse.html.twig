<div class="page-header">
  <h1>{{ translate('_INFO','course') }}</h1>
</div>

<div class="page-subtitle">
  {{course.name}}
</div>

<div class="section-course course-info js-infocourse">
  <div class="row">
    <div class="col-sm-6">
      <div class="course-info__general">
        <div class="box-title">{{ translate('_INFO','course') }}</div>
        <div class="course-info__table">
          <div class="course-info__label">{{ translate('_CODE','course') }}</div>
          <div class="course-info__value">{{course.code}}</div>
        </div>
        <div class="course-info__table">
          <div class="course-info__label">{{ translate('_SUBSCRIBE_METHOD','course') }}</div>
          <div class="course-info__value text--green">Free</div>
        </div>
        <div class="course-info__table">
          <div class="course-info__label">{{ translate('_LANGUAGE','course') }}</div>
          <div class="course-info__value">English</div>
        </div>
        <div class="course-info__table">
          <div class="course-info__label">{{ translate('_DIFFICULTY','course') }}</div>
          <div class="course-info__value text--orange">{{course.difficulty_translate}}</div>
        </div>
        <div class="clear"></div>

        <div class="course-info__table course-info__table--full">
          <div class="course-info__label">{{ translate('_DESCRIPTION','course') }}</div>
          <div class="course-info__value text--gray">
            {{ course.description }}
          </div>
        </div>

        {% if  course.show_users and course.Student.users is not empty %}
            <div class="course-info__table course-info__table--full">
              <div class="course-info__label">{{ course.Student.name }}</div>
              <div class="course-info__value">
                {% for student in course.Student.users %}
                  <a href="#" class="course-info__link">{{student.name}}</a>
                {% endfor %}
              </div>
            </div>
        {% endif %}

        {% if course.show_quota %}
        <div class="course-info__table course-info__table--full">
          <div class="course-info__label">{{ translate('_USED_DISK','course') }}</div>
          <div class="course-info__value text--gray">
            <span class="text--green">{{ course.quota.actual_space }} MB</span> / {% if course.quota.unlimited %} {{ translate('_UNLIMITED_QUOTA','course') }} {% else %} {{ course.quota.max_quota }} {% endif %}
          </div>
        </div>
        {% endif %}

        <div class="clear"></div>
      </div>

      <div class="box-title">MATERIALS</div>
      <div class="row course-info__materials">
        <div class="col-sm-10 course-info__file">
          <a href="#">
            <img src="{{templatePath}}static/images/icons/icon--file.svg" alt="download" class="course-info__icon course-info__icon--download" />
            Lesson slide - Can be a very long title due of the super text very long and impressive, nobody knows about it why i don't know
          </a>
        </div>
        <div class="col-sm-1 course-info__edit">
          <a href="#"><img src="{{templatePath}}static/images/icons/icon--edit.svg" alt="edit file" class="course-info__icon" /></a>
        </div>
        <div class="col-sm-1 course-info__delete">
          <a href="#"><img src="{{templatePath}}static/images/icons/icon--delete.svg" alt="delete file" class="course-info__icon" /></a>
        </div>

        <div class="col-sm-10 course-info__file">
          <a href="#">
            <img src="{{templatePath}}static/images/icons/icon--file.svg" alt="download" class="course-info__icon course-info__icon--download" />
            Lesson slide - Can be a very long title due of the super text very long and impressive, nobody knows about it why i don't know
          </a>
        </div>
        <div class="col-sm-1 course-info__edit">
          <a href="#"><img src="{{templatePath}}static/images/icons/icon--edit.svg" alt="edit file" class="course-info__icon" /></a>
        </div>
        <div class="col-sm-1 course-info__delete">
          <a href="#"><img src="{{templatePath}}static/images/icons/icon--delete.svg" alt="delete file" class="course-info__icon" /></a>
        </div>
      </div>
    </div>

    {% if  course.show_users and course.Administrator.users is not empty %}
    <div class="col-sm-6 course-info__teachercontainer">
      <div class="box-title">{{ course.Administrator.name }}</div>
      {% for user in course.Administrator.users %}
        {% include 'infocourse/userbox.html.twig' with user %}
      {% endfor %}
    </div>
    {% endif %}

    {% if  course.show_users and course.Tutor.users is not empty %}
      <div class="col-sm-6 course-info__teachercontainer">
        <div class="box-title">{{ course.Tutor.name }}</div>
        {% for user in course.Tutor.users %}
          {% include 'infocourse/userbox.html.twig' with user %}
        {% endfor %}
      </div>
    {% endif %}

    {% if  course.show_users and course.Instructor.users is not empty %}
      <div class="col-sm-6 course-info__teachercontainer">
        <div class="box-title">{{ course.Instructor.name }}</div>
        {% for user in course.Instructor.users %}
          {% include 'infocourse/userbox.html.twig' with user %}
        {% endfor %}
      </div>
    {% endif %}

  </div>
</div>

<!-- Modal -->
<div class="modal fade js-infocourse-modal" data-href="{{ block.video_type }}-{{ block.video }}" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog--notitle modal-dialog--video" role="document">
    <div class="modal-header modal-header--notitle">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>
    <div class="modal-content modal-content--full">
      <div class="modal-body modal-body--nopadding js-infocourse-dynamic-content"></div>
    </div>
  </div>
</div>
