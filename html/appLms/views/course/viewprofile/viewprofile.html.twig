

<div class="section-course user-profile">
  <div class="page-subtitle">{{user.name}}</div>

  

  <div class="row">

    {% if user.biography != '' %}
      {% set first_col_width = 'col-sm-9' %}
    {% else %}
      {% set first_col_width = 'col-sm-3' %}
    {% endif %}

    <div class="{{first_col_width}}">
      <div class="box-title">{{ translate('_PROFILE', 'profile') }}</div>
      <div class="col-sm-4 user-profile__column">
        <div class="user-profile__infocontainer">
          <div>
            <div class="user-profile__content">
              <div class="course-info__label">{{ translate('_USERNAME', 'course') }}</div>
              <div class="course-info__value text--gray">{{user.username}}</div>
            </div>

            <div class="user-profile__content">
              <div class="course-info__label">{{ translate('_FIRSTNAME', 'standard') }}</div>
              <div class="course-info__value text--gray">{{user.firstname}}</div>
            </div>

            <div class="user-profile__content">
              <div class="course-info__label">{{ translate('_LASTNAME', 'standard') }}</div>
              <div class="course-info__value text--gray">{{user.lastname}}</div>
            </div>
          </div>
          
          <div class="user-profile__imgcontainer">
            <div class="user-profile__content">
              <div class="course-info__label">{{ translate('_AVATAR', 'standard') }}</div>
              {% if user.avatar != '' %}
                <img class="user-profile__img" src="{{user.avatar}}" alt="{{user.username}}" />
              {% else %}
                <img class="user-profile__img" src="{{templatePath}}/static/images/profile.png" alt="{{user.username}}" />
              {% endif %}
            </div>
          </div>
        </div>

        <div class="course-info__label">{{ translate('_EMAIL', 'standard') }}</div>
        <div class="course-info__value text--gray">{{user.email}}</div>
        <a class="forma-button user-profile__cta" href="{{ route.message.url }}&idst={{ user.idst }}&signature={{ evalPhp('Util::getSignature') }}&sop=unregistercourse'">
          <span class="user-profile__mailicon"></span>
          {{translate('_MESSAGE','course')}}
        </a>
      </div>

      {% if user.biography != '' %}
        <div class="col-sm-8 user-profile__column">
          <div class="course-info__label">{{ translate('_BIOGRAPHY', 'course') }}</div>
          <div class="course-info__value text--gray">{{ user.biography}}</div>
        </div>
      {% endif %}
    </div>

    <div class="col-sm-3">
      <div class="user-profile__column">
        <div class="box-title">{{ translate('_ACTIVITY', 'standard') }}</div>
        <div class="user-profile__content">
          <div class="course-info__label">{{ translate('_REGISTER_DATE', 'profile') }}</div>
          <div class="course-info__value text--gray">02/12/2019</div>
        </div>
        <div class="user-profile__content">
          <div class="course-info__label">{{ translate('_FORUM_MESSAGE', 'profile') }}</div>
          <div class="course-info__value text--gray">65456</div>
        </div>
        <div class="user-profile__content">
          <div class="course-info__label">{{ translate('_LOADED_FILE', 'standard') }}</div>
          <div class="course-info__value text--gray">65456</div>
        </div>
      </div>

      <div class="user-profile__column">
        <div class="box-title">{{ translate('_COMMUNITY', 'profile') }}</div>
        <div class="course-info__label">{{ translate('_LAST_PROFILE_VIEW', 'profile') }}</div>
        <div class="course-info__value text--gray">
          <a href="#" class="user-profile__namelink">Mario Rossi</a>
          <a href="#" class="user-profile__namelink">Giorgio Neri</a>
          <a href="#" class="user-profile__namelink">Maria Bianchi</a>
        </div>
      </div>
    </div>
  </div>
</div>



