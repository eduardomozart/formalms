{% for item in menu %}
    {% if evalPhp('count', [item.subMenu]) %}
    <li class="dropdown" >
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ item.title|raw }}<span class="caret"></span></a>
        <ul class="dropdown-menu">
        {% for subitem in item.subMenu %}
            <li{% if subitem.active %} class="active"{% endif %}><a href="{{ subitem.href }}" title="{{ subitem.title }}">{{ subitem.html|raw }}</a></li>
        {% endfor %}
        </ul>
    </li>
    {% else %}
    <li{% if item.active %} class="active"{% endif %}><a href="{{ item.href }}" title="{{ item.title }}">{{ item.html|raw }}</a></li>
    {% endif %}
{% endfor %}
{% if evalPhp('in_array', [user.getUserLevelId(), [evalPhp('constant', ['ADMIN_GROUP_GODADMIN']), evalPhp('constant', ['ADMIN_GROUP_ADMIN'])]]) %}
<li class="green_menu">
    <a href="{{ evalPhp('Get::rel_path', ['adm']) }}" class="no-border-right no-before" title="{{ translate('_GO_TO_FRAMEWORK', 'menu_over') }}">
        <span class="glyphicon glyphicon-cog top-menu__label">{{ translate('_GO_TO_FRAMEWORK', 'menu_over') }}</span>
    </a>
</li>
{% endif %}