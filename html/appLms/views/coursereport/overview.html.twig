<div class="table-responsive">
    <table class="table table-bordered">
        <colgroup>
          <col style="width: 30px">
          <col style="width: 200px">
          <col style="width: 75px">
          <col style="width: 75px">
          <col style="width: 75px">
          <col style="width: 75px">
          <col style="width: 75px">
          <col style="width: 75px">
          <col style="width: 85px">
          <col style="width: 85px">
          <col style="width: 75px">
          <col style="width: 75px">
          <col style="width: 75px">
          <col style="width: 75px">
          <col style="width: 85px">
        </colgroup>
        <thead>
            <tr>
                <th colspan="2" class="transparent"></th>
                <th colspan="6">INFO</th>
                <th colspan="6">STATS</th>
                <th class="transparent"></th>
            </tr>
            <tr>
                <td colspan="2"></td>
                <td>Type</td>
                <td>Max</td>
                <td>Required</td>
                <td>Weight</td>
                <td>Show</td>
                <td>Finale</td>
                <td>Passed Completed</td>
                <td>Not passed incomplete</td>
                <td>Not Checked</td>
                <td>Average</td>
                <td>Max Score</td>
                <td>Min Score</td>
                <td></td>
            </tr>
        </thead>
        <tbody class="course-sortable">
        {% for test in overview['tests'] %}
            <tr>
                <td class="handle"><i class="fa fa-sort"></i></td>
                <td class="name">{{ test.name }}</td>
                <td class="table-cell">{{ test.type }}</td>
                <td class="table-cell">{{ test.max }}</td>
                <td class="table-cell">{{ test.required }}</td>
                <td class="table-cell">{{ test.weight }}</td>
                {% if test.show %}
                    <td class="text-center table-cell"><i class="fa fa-check"></i></td>
                {% else %}
                    <td class="text-center table-cell"><i class="fa fa-close"></i></td>
                {% endif %}
                {% if test.final %}
                    <td class="text-center table-cell"><i class="fa fa-check"></i></td>
                {% else %}
                    <td class="text-center table-cell"><i class="fa fa-close"></i></td>
                {% endif %}
                <td class="table-cell"><a href="{{ test.passed.link }}">{{ test.passed.value }}</a></td>
                <td class="table-cell"><a href="{{ test.not_passed.link }}">{{ test.not_passed.value }}</a></td>
                <td class="table-cell"><a href="{{ test.not_checked.link }}">{{ test.not_checked.value }}</a></td>
                <td class="table-cell">{{ test.average }}</td>
                <td class="table-cell">{{ test.max_score }}</td>
                <td class="table-cell">{{ test.min_score }}</td>
                <td class="actions">
                    {% for action in test.actions %}
                      {% if action.visible %}
                        <a href="{{ action.link }}"><i class="fa fa-{{ action.icon }}"></i></a>
                      {% endif %}
                    {% endfor %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot class="empty">
            <th colspan="15"></th>
        </tfoot>
    </table>

</div>

<div class="button--add">
  <span>ADD NEW</span>
  <ul class="dropdown">
    <li><a href="index.php?r=lms/coursereport/addactivity">NUOVA ATTIVITA'</a></li>
    <li><a href="index.php?r=lms/coursereport/addscorm">NUOVO OGGETTO SCORM</a></li>
  </ul>
</div>


<div class="activities-container">
    {% for activity in details['activities'] %}
        <div data-activityId="{{ activity.id }}" data-activityName="{{ activity.name }}"></div>
    {% endfor %}
</div>


<script type="text/javascript">

  activities = {{ details|json_encode(constant('JSON_HEX_APOS')) | raw }};

</script>