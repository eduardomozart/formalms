		</div>
		</div>

    <!-- scripts -->
    {{ evalPhp('Layout::zone', ['scripts']) }}
    <!-- debug -->
    {{ evalPhp('Layout::zone', ['debug']) }}
    <!-- def_lang -->
    {{ evalPhp('Layout::zone', ['def_lang']) }}
 
 {% endblock %}       
        
