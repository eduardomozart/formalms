<div class="dropdown" id="createitem_{{ tab.type }}">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuBtn_{{ tab.type }}" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        {{ translate('_CREATE_NEW', 'standard') }}
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" id="dropdownMenu_{{ tab.type }}" aria-labelledby="dropdownMenu_{{ tab.type }}">
        {% for el in lo_types %}
            <li id="type_{{ el.type }}" data-id="{{ el.type }}" class="folderView__li itemType">
                <div class="folderView__el {% if el.type %}fv-is-{{ el.type }}{% else %}fv-is-folder{% endif %}">
                    <span class="folderView__label">{{ el.title }}</span>
                </div>
            </li>
        {% endfor %}
    </ul>

    <div class="row createFolderForm hidden">
        <div class="col-lg-12">
            <div class="createFolder__link ft-is-folder">
                <input type="text" class="createFolder__input" placeholder="{{ translate('_ORGFOLDERNAME', 'storage') }}">
                <button class="btn createFolder__btn" type="button"></button>
                <input type="hidden" name="authentic_request" value="{{ evalPhp('Util::getSignature') }}" />
            </div>
            <div class="createFolder__input_err hidden"></div>
        </div>
    </div>
</div>
