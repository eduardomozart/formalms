<div class="filter-container">
  <select class="filter js-user-level-filter is-disabled" disabled>
    {% for i in 0..7 %}
      {% if loop.first %}
        <option value="false" selected>{{ translate('_ALL')}}</option>
      {% else %}
        <option value="{{ loop.index0 }}">{{ translate('_LEVEL_'~loop.index0)}}</option>
      {% endif %}
    {% endfor %}
  </select>

  <div class="button--exportcsv"><a href="index.php?r=lms/coursereport/export">EXPORT CSV</a></div>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th colspan="2" class="transparent"></th>
                <th colspan="4" class="text-center">
                    {#<a class="activities-nav activities-nav--prev js-prev-activities"><i class="fa fa-chevron-left"></i></a>#}
                    ACTIVITIES
                    {#<a class="activities-nav activities-nav--next js-next-activities"><i class="fa fa-chevron-right"></i></a>#}
                </th>
                <th class="transparent"></th>
            </tr>
            <tr>
                <th>User</th>
                <th>
                  <select class="filter js-user-detail-filter is-disabled" disabled>
                  </select>
                </th>

                <th>
                  <select class="filter js-test-filter" data-test="0">
                    <option value="">-</option>
                  </select>
                </th>
                <th>
                  <select class="filter js-test-filter" data-test="1">
                    <option value="">-</option>
                  </select>
                </th>
                <th>
                  <select class="filter js-test-filter" data-test="2">
                    <option value="">-</option>
                  </select>
                </th>
                <th>
                  <select class="filter js-test-filter" data-test="3">
                    <option value="">-</option>
                  </select>
                </th>

                <th class="text-center">Final</th>
            </tr>
        </thead>
        <tbody class="js-details-table">

        </tbody>
        <tfoot class="empty">
            <th colspan="7" class="loading"></th>
        </tfoot>
    </table>
</div>

