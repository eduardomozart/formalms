<div class="dashboard__infoBlock dashboard__infoBlock--select">
    <label class="dashboard__label"
           for="{{ block.postData.block }}-{{ index }}-file">{{ Lang_translate('_SELECT_'~ form.field|upper,'dashboardsetting') }}</label>

    <select name="{{ form.name }}" class="dashboard__select form-control js-extra-setting"
            data-block="{{ block.postData.block }}-{{ index }}">

        {% for key,value in form.values %}
            <option value="{{ key }}"{% if attribute(block.data, form.name) == key %} selected{% endif %}>{{ Lang_translate(value,'dashboardsetting') }}</option>
        {% endfor %}
    </select>
</div>
