<div class="dashboard__infoBlock dashboard__infoBlock--radio">
    <div class="form-group">
        <label class="dashboard__label" for="{{ block.postData.block }}-{{ index }}-file">{{Lang_translate('_RADIO_'~ form.field|upper,'dashboardsetting')}}</label>

        <div class="dashboard__infoContainer">
            {% for key,value in form.values %}

                <div class="dashboard__el">
                    <input type="radio" name="{{ form.name }}" class="js-extra-setting" value="{{ block.postData.block }}_{{ index }}_{{ key }}" {% if block.type == type %}checked="checked"{% endif %} />{{ value }}
                </div>

            {% endfor %}
        </div>
    </div>
</div>
