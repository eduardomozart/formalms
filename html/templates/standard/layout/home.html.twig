{% extends "base.html.twig" %}

{% block stylesheet %}
    <link rel="stylesheet" type="text/css" href="{{ evalPhp('Layout::path') }}style/lms-home.css"/>
{% endblock %}

{% block javascript %}
{% endblock %}

{% block content %}

    <!-- blind nav -->
    {{ evalPhp('Layout::zone', ['blind_navigation']) }}
    <!-- header -->
    <div class="header">
        <div class="select-language">
            {{ changeLanguage_text }}: {{ changeLanguageBox|raw }}
        </div>
        <a href="index.php"><img class="left_logo" src="{{ layout_path }}images/company_logo.png" alt="Left logo"/></a>
        <div class="nofloat"></div>
    </div>
    <div class="webcontent">
        {{ evalPhp('Layout::zone', ['content']) }}
    </div>
    <!-- footer -->
    <div class="footer">
        {{layout_zone_footer | raw}}
        {#{{ login_links|raw }}#}
        <div class="copyright">
            {{ copyright|raw }}
        </div>
    </div>

    <!-- def lang -->
    {{ evalPhp('Layout::zone', ['def_lang']) }}
    <!-- scripts -->
    {{ evalPhp('Layout::zone', ['scripts']) }}
    <!-- end scripts -->
    {{ evalPhp('Layout::zone', ['debug']) }}

    <script type="text/javascript">
        window.onload = function () {
            try {
                window.document.getElementById('login_userid').focus();
            } catch (e) {
            }
        }
    </script>
{% endblock %}