{% block stylesheet %}

{% endblock %}

    {% block javascript %}


    {% endblock %}

 {% block content %}

     <!-- container -->
         <div class="row section-coourse">
             <div class="section-coourse__header col-lg-12">
                 <div class="row">
                     <div class="col-sm-3 text-center">
                         <div class="row">
                             <img src="{{ course_img }}" class="img-responsive section-coourse__img">
                         </div>
                     </div>
                     <div class="col-sm-9">
                         <h1 class="section-coourse__title">{{ course_name }}</h1>
                         <div class="section-coourse__progress-cotainer">
                             <div class="progress section-coourse__progress">
                                 <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                                     60%
                                 </div>
                                 <span class="glyphicon glyphicon-signal pull-right" aria-hidden="true"></span>
                             </div>
                         </div>
                     </div>
                </div>
             </div>
             <div class="clearfix"></div>
             <div class="section-coourse__menu">
                 <div class="col-sm-3 text-center">
                     <div class="row">
                         <div class="col-xs-12">
                             <div class="btn-group btn-flex">
                                 <button type="button" class="btn btn-default">Menu</button>
                                 <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                     <span class="caret"></span>
                                     <span class="sr-only">Toggle Dropdown</span>
                                 </button>
                                 <ul class="dropdown-menu">
                                     {% for menu in menu_module %}
                                         <li><a href="#" data-id="{{ menu.id_menu }}"><span class="glyphicon glyphicon-signal" aria-hidden="true"></span> <b>{{ menu.name }}</b></a></li>
                                     {% endfor %}
                                 </ul>
                             </div>
                         </div>
                     </div>
                 </div>

                 <div class='col-md-9 section-coourse__menu-horizontal'>
                     <div class="row">
                         <div class="prv pull-left col-xs-1 text-center"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span></div>
                         <ul class="section-coourse__menu-slider col-xs-10">

                             {% for menu in menu_horizontal %}
                                 <li><a href="{{ menu.link }}">{{ menu.name }}</a></li>
                             {% endfor %}
                             {#<li><a href="index.php?modname=storage&op=display&id_module_sel=12&id_main_sel=2" class="active">Gestione oggetti didattici</a></li>#}
                         </ul>
                         <div class="nxt pull-right col-xs-1 text-center"><span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></div>
                    </div>
                 </div>
                 <div class="clearfix"></div>
             </div>
         </div>
         <div class="col-lg-12">
             <div class="row">

             </div>
         </div>

 {% endblock %}

<script type="text/javascript">
    $('body').on('click', '.prv, .nxt', function() {
        $(this).siblings(".section-coourse__menu-slider").stop().animate({
            scrollLeft: (this.className.match('nxt')?'+=':'-=')+200
        },1000);
    });
</script>